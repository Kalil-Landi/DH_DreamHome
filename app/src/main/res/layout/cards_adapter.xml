<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:backgroundTint="@color/DH_Fundo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/dh_background_cards"
        android:padding="16dp"
        android:elevation="5dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <TextView
            android:id="@+id/card_textView_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Descrição"
            android:textColor="@color/DH_Text1"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_textView_precoXquatidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="30.50€ x 3 Und"
            android:textColor="@color/DH_Text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_textView_descricao" />

        <TextView
            android:id="@+id/card_textView_loja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IKEA"
            android:textColor="@color/DH_Text1"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/card_textView_total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_textView_total" />

        <TextView
            android:id="@+id/card_textView_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Total: 91.50€"
            android:textColor="@color/DH_Text1"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/card_textView_precoXquatidade" />

        <TextView
            android:id="@+id/card_textView_prioridade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Prioridade"
            android:textColor="@color/DH_Text1"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_textView_total" />

        <ImageView
            android:id="@+id/card_imageView_prioridade1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_textView_prioridade"
            app:srcCompat="@drawable/alert_on" />

        <ImageView
            android:id="@+id/card_imageView_prioridade2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_imageView_prioridade1"
            app:layout_constraintStart_toEndOf="@+id/card_imageView_prioridade1"
            app:layout_constraintTop_toTopOf="@+id/card_imageView_prioridade1"
            app:srcCompat="@drawable/alert_on" />

        <ImageView
            android:id="@+id/card_imageView_prioridade3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_imageView_prioridade2"
            app:layout_constraintStart_toEndOf="@+id/card_imageView_prioridade2"
            app:layout_constraintTop_toTopOf="@+id/card_imageView_prioridade2"
            app:srcCompat="@drawable/alert_on" />

        <ImageView
            android:id="@+id/card_imageView_prioridade4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_imageView_prioridade3"
            app:layout_constraintStart_toEndOf="@+id/card_imageView_prioridade3"
            app:layout_constraintTop_toTopOf="@+id/card_imageView_prioridade3"
            app:srcCompat="@drawable/alert_off" />

        <ImageView
            android:id="@+id/card_imageView_prioridade5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_imageView_prioridade4"
            app:layout_constraintStart_toEndOf="@+id/card_imageView_prioridade4"
            app:layout_constraintTop_toTopOf="@+id/card_imageView_prioridade4"
            app:srcCompat="@drawable/alert_off" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dh_background_cards_image" />

        <ImageView
            android:id="@+id/card_imageView_produtoImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="@+id/imageView10"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/imageView10"
            app:srcCompat="@drawable/sem_foto" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>